<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit the Invoice Form View -->
        <record id="view_move_form_inherit_product_field" model="ir.ui.view">
            <field name="name">account.move.form.inherit.product.field</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <!-- Target the invoice line tree view -->
                <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='name']" position="after">
                    <field name="product_id"/>
                </xpath>

                <!-- Optional: also show it in the line form view -->
                <xpath expr="//field[@name='invoice_line_ids']/form/field[@name='name']" position="after">
                    <field name="product_id"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
